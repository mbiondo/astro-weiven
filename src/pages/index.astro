---
import Layout from "@layouts/layout.astro"
import About from "@sections/about.astro"
import Agile from "@sections/agile.astro"
import Contact from "@sections/contact.astro"
import Hero from "@sections/hero.astro"
import Objetive from "@sections/objetive.astro"
import Partners from "@sections/partners.astro"
import Security from "@sections/security.astro"
import Services from "@sections/services.astro"
import Solutions from "@sections/solutions.astro"
---

<Layout title='Home'>
	<Hero />
	<About />
	<div class='relative z-30 h-12 text-gray-200 bg-white border-b-2 border-blue-500 md:-mt-12 pattern-diagonal-lines-sm'></div>
	<div class='bg-white'>
		<h2 class='title'>Servicios</h2>
	</div>
	<Services />
	<Security />
	<Solutions />
	<Agile />
	<Partners />
	<Objetive />
	<Contact />
</Layout>

<style>
	.title {
		@apply max-w-6xl px-4 pt-12 mx-auto text-4xl font-bold text-left text-gray-800 md:text-5xl;
	}
</style>
