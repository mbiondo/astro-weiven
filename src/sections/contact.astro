---
import Wave from "@components/wave.astro"
import ServicesImage from "@assets/images/servicios.jpg"
import { Image } from "astro:assets"
---

<div
	class='grid w-full grid-cols-1 text-white bg-gradient-to-r from-blue-900 to-transparent relative overflow-hidden min-h-[50vh]'
	id='contact'
>
	<div
		class='relative z-10 flex flex-col items-center justify-center w-full max-w-5xl min-h-screen px-6 pt-40 mx-auto text-left pb-96 md:px-0'
		data-aos='fade-up'
	>
		<h1 class='w-full mx-auto mb-3 text-4xl font-bold tracking-wider text-center text-gray-100 md:text-6xl'>Contacto</h1>

		<div class='pt-6 text-center'>
			<div class='py-6 text-2xl kush-center'>Piedras 575</div>
		</div>
		<button class='relative w-64 mt-1 mx-2 rounded-md pb-1 font-bold font-sans text-white transform duration-700'>
			<div class='relative overflow-hidden'>
				<span
					class='block p-2 mb-1 font-sans text-2xl font-light tracking-wider text-gray-100 duration-700 bg-blue-300 rounded-md cursor-pointer select-all hover:bg-opacity-25 bg-opacity-10'
				>
					info@weiven.ar
				</span>
			</div>
		</button>
	</div>
	<div class='absolute inset-0 z-0 bg-gray-800 bg-opacity-50'>
		<div class='opacity-10 image-container'>
			<Image src={ServicesImage} alt='DiseÃ±o de servicios' class='fit-content' loading='eager' />
		</div>
	</div>
	<Wave />
</div>

<style>
	.fit-content {
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
		box-sizing: border-box;
		padding: 0;
		border: none;
		margin: auto;
		display: block;
		width: 0;
		height: 0;
		min-width: 100%;
		max-width: 100%;
		min-height: 100%;
		max-height: 100%;
		object-fit: cover;
	}
	.image-container {
		display: block;
		overflow: hidden;
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
		box-sizing: border-box;
		margin: 0;
	}
</style>
